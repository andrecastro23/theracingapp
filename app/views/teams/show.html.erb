<div>
  <div>
    <h1>
      Team #<%= @the_team.id %> details
    </h1>

    <div>
      <div>
        <a href="/teams">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_team/<%= @the_team.id %>">
          Delete team
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Championships
      </dt>
      <dd>
        <%= @the_team.championships %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_team.bio %>
      </dd>

      <dt>
        Manufacturer
      </dt>
      <dd>
        <%= @the_team.manufacturer_id %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_team.name %>
      </dd>

      <dt>
        Stable count
      </dt>
      <dd>
        <%= @the_team.stable_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_team.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_team.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit team
    </h2>

    <form action="/modify_team/<%= @the_team.id %>"  method="post" >
      <div>
        <label for="championships_box">
          Championships
        </label>

        <input type="text" id="championships_box" name="query_championships" value="<%= @the_team.championships %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <input type="text" id="bio_box" name="query_bio" value="<%= @the_team.bio %>">
      </div>

      <div>
        <label for="manufacturer_id_box">
          Manufacturer
        </label>

        <input type="text" id="manufacturer_id_box" name="query_manufacturer_id" value="<%= @the_team.manufacturer_id %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_team.name %>">
      </div>

      <div>
        <label for="stable_count_box">
          Stable count
        </label>

        <input type="text" id="stable_count_box" name="query_stable_count" value="<%= @the_team.stable_count %>">
      </div>

      <button>
        Update team
      </button>
    </form>
  </div>
</div>

<hr>
