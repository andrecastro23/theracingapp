<div>
  <div>
    <h1>
      My Lineup
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new pick
    </h2>
    <div>
    To delete a pick, click "Show details" on that driver and then click "Un-pick."
    </div>

    <form action="/insert_pick" method="post">
      <div>
        <label for="driver_id_box">
          Driver
        </label>

        <select id="driver_id_box" name="query_driver_id">
          <% Driver.all.order(:name).each do |a_driver| %>
            <option value="<%= a_driver.id %>">
            <%= a_driver.name %> - <%= a_driver.tier %>
            </option>
          <% end %>
        </select>

        

      

      <button>
        Create pick
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
       <% @list_of_picks.each do |a_pick| %>
        <th>
          
        </th>
        <th>
          Driver
        </th>

        <th>
          Tier
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

   
      <tr>
      <% #<td>
           #a_pick.id 
        #</td> 
        %>

        <td>
          <img src="<%= a_pick.driver.number_photo %>" style="width:100px;height:100px;">
        </td>

        <td>
          <%= a_pick.driver.name %>
        </td>

        <td>
          <%= a_pick.tier %>
        </td>

        <td>
          <%= time_ago_in_words(a_pick.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_pick.updated_at) %> ago
        </td>

        <td>
          <a href="/drivers/<%= a_pick.driver_id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
